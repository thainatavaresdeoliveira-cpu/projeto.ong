--js/scripts.js--
// scripts.js
// Código responsável por:
// 1) Atualizar anos do footer
// 2) Aplicar máscaras simples para CPF, telefone e CEP
// 3) Tratar submissão do formulário para demonstrar validação nativa

// Atualiza os anos nos footers
document.addEventListener('DOMContentLoaded', function () {
  const year = new Date().getFullYear();
  const els = [document.getElementById('year'), document.getElementById('year2'), document.getElementById('year3')];
  els.forEach(e => { if (e) e.textContent = year; });

  // Máscaras: liga eventos de input
  const cpf = document.getElementById('cpf');
  const tel = document.getElementById('telefone');
  const cep = document.getElementById('cep');

  if (cpf) cpf.addEventListener('input', mascaraCPF);
  if (tel) tel.addEventListener('input', mascaraTelefone);
  if (cep) cep.addEventListener('input', mascaraCEP);

  // Validação do form: usa validação nativa, mas exibe mensagem personalizada simples
  const form = document.getElementById('cadastroForm');
  if (form) {
    form.addEventListener('submit', function (e) {
      // Se inválido, impedimos submissão e deixamos browser mostrar erros nativos
      if (!form.checkValidity()) {
        e.preventDefault();
        form.reportValidity(); // mostra mensagem nativa
        return;
      }
      // Aqui seria o envio real (fetch/POST). Por enquanto, evitamos recarregar a página.
      e.preventDefault();
      alert('Cadastro recebido! (simulação local). Verifique envio real no backend.');
      form.reset();
    });
  }
});

/* ---- Funções de máscara ---- */

/**
 * Aplica máscara tipo 000.000.000-00 no CPF enquanto digita.
 * Não valida algoritmo do CPF, apenas formata.
 */
function mascaraCPF(e) {
  let v = e.target.value.replace(/\D/g, ''); // remove não-dígitos
  if (v.length > 11) v = v.slice(0, 11);
  v = v.replace(/^(\d{3})(\d)/, '$1.$2');
  v = v.replace(/^(\d{3})\.(\d{3})(\d)/, '$1.$2.$3');
  v = v.replace(/\.(\d{3})(\d)/, '.$1-$2');
  e.target.value = v;
}

/**
 * Formata telefone brasileiro: (00) 90000-0000 ou (00) 0000-0000
 */
function mascaraTelefone(e) {
  let v = e.target.value.replace(/\D/g, '');
  if (v.length > 11) v = v.slice(0, 11);
  // DDD
  v = v.replace(/^(\d{2})(\d)/, '($1) $2');
  // mobile com 9 dígitos
  if (v.replace(/\D/g, '').length > 10) {
    v = v.replace(/(\d{5})(\d{4})$/, '$1-$2');
  } else {
    v = v.replace(/(\d{4})(\d{4})$/, '$1-$2');
  }
  e.target.value = v;
}

/**
 * Formata CEP: 00000-000
 */
function mascaraCEP(e) {
  let v = e.target.value.replace(/\D/g, '');
  if (v.length > 8) v = v.slice(0, 8);
  v = v.replace(/^(\d{5})(\d)/, '$1-$2');
  e.target.value = v;
}
